<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sophomoreventure.collegeconnect" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.SlideShowActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateEventActivity"
            android:label="Create Event" />
        <activity
            android:name=".EventView"
            android:label="Event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.RegistrationActivity"
            android:label="@string/title_activity_registration" />

        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".MyEventsActivity"
            android:label="@string/title_activity_login" >
        </activity>

        <activity android:name=".EventsByClubActivity" />
        <activity
            android:name=".OtherEventView"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SvnitRegActivity" />
        <activity android:name=".NonSvnitRegActivity" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
