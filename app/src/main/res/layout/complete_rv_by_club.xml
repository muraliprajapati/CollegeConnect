<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_horizontal_scroll_view"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="By Club"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="normal" />

        <Button
            style="@style/BorderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="More" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res/android"
        app:id="@+id/byClubRecyclerView"
        app:layout_width="match_parent"
        app:layout_height="128dp"
        app:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>